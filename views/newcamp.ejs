<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; ">Create a new Campground</h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Campground Name" name="name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="image" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description" required>
                </div>
                <button class="btn btn-primary btn-block">Create!</button>
            </form>
            <hr>
            <form action="/campgrounds" method="GET">
                <button class="btn btn-primary btn-sm">Return to Campgrounds</button>
            </form>
        </div>
    </div>
</div>




